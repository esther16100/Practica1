<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/curso_detalle_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/curso_detalle_numero_seminari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/curso_detalle_titulo"
        app:layout_constraintEnd_toEndOf="@id/curso_detalle_logo"
        app:layout_constraintStart_toStartOf="@id/curso_detalle_logo"
        app:layout_constraintTop_toBottomOf="@id/curso_detalle_logo"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="131" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/curso_detalle_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/curso_detalle_empresa"
        app:layout_constraintEnd_toEndOf="@id/curso_detalle_logo"
        app:layout_constraintStart_toStartOf="@id/curso_detalle_logo"
        app:layout_constraintTop_toBottomOf="@id/curso_detalle_numero_seminari"
        tools:text="Tecnología híbrida Seat" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/curso_detalle_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/curso_detalle_logo"
        app:layout_constraintStart_toStartOf="@id/curso_detalle_logo"
        app:layout_constraintTop_toBottomOf="@id/curso_detalle_titulo"
        tools:text="SEAT España" />


</androidx.constraintlayout.widget.ConstraintLayout>